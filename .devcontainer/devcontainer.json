{
    "name": "Project Dev",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
      "rust": "latest"
    },
    "postCreateCommand": ". .venv/bin/activate && pip install -r requirements.txt",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "rust-lang.rust-analyzer",
          "ms-vscode-remote.remote-containers"
        ],
        "settings": {
          "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python"
        }
      }
    },
    "initializeCommand": "python -m venv .venv"
  }