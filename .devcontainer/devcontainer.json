{
  "name": "Project Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.10",
  "features": {
    "rust": "latest"
  },
  "onCreateCommand": "python -m venv .venv && .venv/bin/pip install -r requirements.txt && curl https://sh.rustup.rs -sSf | sh -s -- -y --profile minimal",
  "postStartCommand": ".venv/bin/maturin develop --release --manifest-path ./scripts/photometry/rupho/Cargo.toml",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "rust-lang.rust-analyzer",
        "ms-vscode-remote.remote-containers",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  }
}